<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              tools:context="com.vhly.portfolio.app.MainActivity"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="My App Portfolio"
            />

    <Button
            android:id="@+id/btn_1"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:layout_marginTop="50dp"
            android:text="SPOTIFY STREAMER"
            />

    <Button
            android:id="@+id/btn_2"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:text="SCORES APP"
            />

    <Button
            android:id="@+id/btn_3"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:text="LIBRARY APP"
            />

    <Button
            android:id="@+id/btn_4"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:text="BUILD IT BIGGER"
            />

    <Button
            android:id="@+id/btn_5"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:text="XYZ READER"
            />

    <Button
            android:id="@+id/btn_6"
            android:layout_height="wrap_content"
            style="@style/MyStyleButton"
            android:background="#BF0030"
            android:textColor="#FFFFFF"
            android:text="CAPSTONE: MY OWN APP"
            />

</LinearLayout>
